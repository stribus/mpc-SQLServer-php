{
    "name": "mcp/sqlserver-server",
    "description": "Servidor MCP para SQL Server - Exp√µe estrutura de dados para ferramentas de IA",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Flavio Augusto Toldo",
            "email": "flavio.a.toldo@fatoldo.com.br"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-sqlsrv": "*",
        "flightphp/core": "^3.0",
        "flightphp/runway": "^0.2.4",
        "monolog/monolog": "^3.0",
        "tracy/tracy": "^2.10",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "flightphp/tracy-extensions": "^0.2.6",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "MCP\\SqlServer\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MCP\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "server": "php -S localhost:8080 index.php"
    }
}
